<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Noses -->
	<GeneDef ParentName="GeneHandsBase">
		<defName>VRE_Talons</defName>
		<label>talons</label>

		<description>Carriers of this gene have hands that partially resemble talons. This reduces their ability to manipulate objects, but allows them to perform special attacks in melee combat.</description>
		<iconPath>UI/Icons/Genes/VRE_Talons</iconPath>
		<displayOrderInCategory>320</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
	
		<capMods>
			<li>
				<capacity>Manipulation</capacity>
				<postFactor>0.9</postFactor>
			</li>
		</capMods>
		<symbolPack>
			<prefixSymbols>
				<li>
					<symbol>bird</symbol>
				</li>
				<li>
					<symbol>talon</symbol>
				</li>
				<li>
					<symbol>claw</symbol>
				</li>
				<li>
					<symbol>predator</symbol>
				</li>
				<li>
					<symbol>hook</symbol>
				</li>
			</prefixSymbols>
			<suffixSymbols>
				<li>
					<symbol>talon</symbol>
				</li>
				<li>
					<symbol>sharp</symbol>
				</li>
				<li>
					<symbol>claw</symbol>
				</li>
				<li>
					<symbol>predator</symbol>
				</li>
			</suffixSymbols>
			<wholeNameSymbols>
				<li>
					<symbol>talons</symbol>
				</li>

			</wholeNameSymbols>
		</symbolPack>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<hediffsToBodyParts>
					<li>
						<hediff>VRE_SharpTalons</hediff>
						<bodyparts>
							<li>Hand</li>
							<li>Hand</li>
						</bodyparts>
					</li>
				</hediffsToBodyParts>

			</li>
		</modExtensions>
	</GeneDef>

</Defs>