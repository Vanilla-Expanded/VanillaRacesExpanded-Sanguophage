<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>VRE_Sensitivity_Dangerous_Hediff</defName>
		<label>dangerous UV sensitivity</label>
		<description>This is a hidden hediff that modifies the pawn's Sight depending on sunlight.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="AnimalBehaviours.HediffCompProperties_StageBySunlight">

			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0.1</minSeverity>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VRE_ConsumedAnimalHemogen</defName>
		<label>consumed animal hemogen</label>
		<description>Animal hemogen increases regeneration and combat capabilities of the user, but greatly decreases the capability to communicate with others.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<InjuryHealingFactor>0.1</InjuryHealingFactor>
				</statOffsets>
				<statFactors>
					<MeleeDPS>1.1</MeleeDPS>
				</statFactors>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<setMax>0.2</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VRE_ConsumedCorpseHemogen</defName>
		<label>consumed corpse hemogen</label>
		<description>Corpse hemogen greatly weakens the carrier of this hemogen type, but increases consciousness and blood filtration significantly.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.4</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0.8</setMax>
					</li>
					<li>
						<capacity>Talking</capacity>
						<setMax>0.8</setMax>
					</li>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.8</setMax>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<setMax>0.8</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VRE_ConsumedSanguophageHemogen</defName>
		<label>consumed sanguophage hemogen</label>
		<description>Sanguophage hemogen gives the carrier a powerful boost to all capacities.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<painOffset>-0.2</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VRE_SharpTalons</defName>
		<label>sharp talons</label>
		<description>Sharp talons which can be used in melee combat.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>talons</label>
						<capacities>
							<li>Cut</li>
						</capacities>
						<power>16</power>
						<cooldownTime>2</cooldownTime>
					</li>
				</tools>
			</li>
		</comps>
		<addedPartProps>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
	</HediffDef>
	<HediffDef ParentName="DiseaseBase">
		<defName>VRE_DraincasketSickness</defName>
		<label>draincasket sickness</label>
		<description>After-effects of using a draincasket. Symptoms of draincasket sickness typically include localized pain, swelling, and redness at the site of the draincasket tubes' connection. Victims may experience increasing fatigue, weakness, and a general feeling of malaise.</description>
		<descriptionShort>After-effects of using a draincasket. Victims may experience increasing fatigue, weakness, and a general feeling of malaise.</descriptionShort>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>8000~12000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<vomitMtbDays>0.125</vomitMtbDays>
				<painOffset>0.4</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.6</postFactor>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.9</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.9</postFactor>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>